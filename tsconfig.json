{
  "extends": "./packages/tsconfig/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@stacks/*": ["./stacks/*"],
      "@stacks": ["./stacks"]
    },
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "./graphql/schema.graphql",
        "tadaOutputLocation": "./graphql/"
      }
    ]
  },
  "include": [
    "sst.config.ts",
    "drizzle.config.ts",
    "codegen.ts",
    "./stacks/**/*.ts"
  ],
  "exclude": ["./node_modules/**", "./.sst/**"]
}
