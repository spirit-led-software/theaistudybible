{
  "extends": "@theaistudybible/tsconfig",
  "compilerOptions": {
    "paths": {
      "@theaistudybible/core": ["../core/src"],
      "@theaistudybible/core/*": ["../core/src/*"],
      "@theaistudybible/langchain": ["../langchain/src"],
      "@theaistudybible/langchain/*": ["../langchain/src/*"],
      "@theaistudybible/server": ["./src"],
      "@theaistudybible/server/*": ["./src/*"],
      "@lib/server/database": ["./src/lib/database"],
      "@lib/server/cache": ["./src/lib/cache"]
    }
  },
  "include": ["./src/**/*.ts", "../core/globals.d.ts"],
  "exclude": ["./node_modules"]
}
