{
  "extends": "@theaistudybible/tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/schemas": ["./src"],
      "@/schemas/*": ["./src/*"],
      "@/core": ["../core/src"],
      "@/core/*": ["../core/src/*"],
      "@/ai": ["../ai/src"],
      "@/ai/*": ["../ai/src/*"],
      "@/www": ["../../apps/www/src"],
      "@/www/*": ["../../apps/www/src/*"],
      "@/functions": ["../../apps/functions/src"],
      "@/functions/*": ["../../apps/functions/src/*"],
      "@/workers": ["../../apps/workers/src"],
      "@/workers/*": ["../../apps/workers/src/*"],
      "@/scripts": ["../../tools/scripts/src"],
      "@/scripts/*": ["../../tools/scripts/src/*"]
    }
  },
  "include": ["../core/globals.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
