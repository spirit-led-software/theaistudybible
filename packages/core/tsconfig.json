{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "ignoreDeprecations": "5.0",
    "typeRoots": ["./src/types"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules/**"]
}
