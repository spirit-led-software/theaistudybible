{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "typeRoots": ["./src/types", "../core/src/types"],
    "lib": ["dom", "dom.iterable", "ES2021"],
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "strict": false, // Not strict to prevent errors in drizzle-orm
    "paths": {
      "@core/configs": ["../core/src/configs"],
      "@core/configs/*": ["../core/src/configs/*"],
      "@core/model": ["../core/src/database/model"],
      "@core/model/*": ["../core/src/database/model/*"],
      "@core/schema": ["../core/src/database/schema"],
      "@core/schema/*": ["../core/src/database/schema/*"],
      "@revelationsai/core/*": ["../core/src/*"],
      "@lib": ["./src/lib"],
      "@lib/*": ["./src/lib/*"],
      "@services": ["./src/services"],
      "@services/*": ["./src/services/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
