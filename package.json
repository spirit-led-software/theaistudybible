{
  "name": "theaistudybible",
  "description": "The AI Study Bible",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "clean-install": "rimraf bun.lockb .sst --glob '**/node_modules' && bun install --no-cache && sst install",
    "db:generate": "sst shell -- drizzle-kit generate",
    "db:migrate": "sst shell -- drizzle-kit migrate",
    "db:seed": "sst shell -- bun run ./tools/scripts/src/index.ts db seed",
    "db:studio": "sst shell -- drizzle-kit studio",
    "dev": "sst dev",
    "deploy": "sst deploy",
    "format:check": "biome format .",
    "format": "biome format --write .",
    "lint:fix": "biome lint --write .",
    "lint": "biome lint .",
    "prerelease": "bun run type-check && bun run format && bun run lint:fix",
    "refresh": "sst refresh",
    "remove": "sst remove",
    "scripts": "sst shell -- bun run ./tools/scripts/src/index.ts",
    "scripts:prod": "sst shell --stage production -- bun run ./tools/scripts/src/index.ts",
    "secret:set": "sst secret set",
    "secret:remove": "sst secret remove",
    "secret:list": "sst secret list",
    "type-check": "turbo run type-check",
    "test": "vitest run",
    "upgrade": "bun run scripts upgrade && sst upgrade"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@types/bun": "^1.1.10",
    "@types/node": "^22.7.4",
    "drizzle-kit": "^0.24.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.1.3",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.658.1",
    "@aws-sdk/client-ses": "^3.658.1",
    "@aws-sdk/client-sqs": "^3.658.1",
    "@aws-sdk/s3-request-presigner": "^3.658.1",
    "@libsql/client": "0.14.0",
    "@upstash/ratelimit": "^2.0.3",
    "@upstash/redis": "^1.34.1",
    "ai": "^3.4.7",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "lucia": "^3.2.0",
    "sst": "3.1.51",
    "stripe": "^16.12.0",
    "zod": "^3.23.8"
  },
  "packageManager": "bun@1.1.27",
  "workspaces": ["apps/*", "packages/*", "tools/*"],
  "overrides": {
    "nitropack": "npm:nitropack-nightly@latest"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@sentry/cli",
    "@sentry/profiling-node",
    "esbuild",
    "sharp"
  ]
}
