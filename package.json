{
  "name": "revelationsai",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently  --names \"SST,CodeGen\" -c \"bgYellow,bgBlue\" \"sst dev\" \"graphql-codegen --watch './graphql/schema.graphql' --watch './codegen.ts'\"",
    "build": "concurrently --names \"SST,CodeGen\" -c \"bgYellow,bgBlue\" \"sst build --stage\" \"graphql-codegen\"",
    "deploy": "sst deploy --stage",
    "remove": "sst remove --stage",
    "console": "sst console",
    "typecheck": "tsc --noEmit",
    "typecheck:all": "pnpm run typecheck && pnpm run -r --parallel typecheck",
    "lint": "pnpm run -r --parallel lint",
    "format": "pnpm run -r --parallel format",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --watch './graphql/schema.graphql' --watch './codegen.ts'",
    "update": "concurrently --names \"Dependency Update,Chromium Layer Update,Argon Layer Update\" -c \"bgYellow,bgBlue,bgPink\" \"pnpm update -rLf && pnpm sst update && pnpm install -rf\" \"cd lambda-layers/chromium && ./build-layer.sh\" \"cd lambda-layers/argon2 && ./build-layer.sh\""
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/client-preset": "^4.2.6",
    "@graphql-codegen/introspection": "4.0.3",
    "@graphql-codegen/typescript": "4.0.7",
    "@graphql-codegen/typescript-resolvers": "4.1.0",
    "@types/node": "^20.12.12",
    "@types/pg": "^8.11.6",
    "aws-cdk-lib": "2.142.1",
    "concurrently": "^8.2.2",
    "constructs": "10.3.0",
    "drizzle-kit": "0.21.2",
    "graphql": "^16.8.1",
    "sst": "2.42.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.577.0",
    "@aws-sdk/client-s3": "^3.577.0",
    "@aws-sdk/client-sqs": "^3.577.0",
    "@aws-sdk/credential-providers": "^3.577.0",
    "@aws-sdk/s3-request-presigner": "^3.577.0",
    "@neondatabase/serverless": "^0.9.3",
    "@upstash/vector": "^1.1.1",
    "drizzle-orm": "^0.30.10",
    "drizzle-zod": "^0.5.1",
    "gql.tada": "^1.7.5",
    "neon-sdk": "^1.21.0",
    "pg": "^8.11.5",
    "zod": "^3.23.8"
  },
  "workspaces": [
    "packages/*"
  ]
}