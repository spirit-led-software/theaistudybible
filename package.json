{
  "name": "theaistudybible",
  "description": "The AI Study Bible",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "clean-install": "rimraf bun.lockb .sst --glob '**/node_modules' && bun install --no-cache && sst install",
    "clean": "turbo run clean",
    "cy:open": "sst shell -- cypress open",
    "db:generate": "sst shell -- drizzle-kit generate",
    "db:migrate": "sst shell -- drizzle-kit migrate",
    "db:seed": "sst shell -- bun run ./tools/scripts/src/index.ts db seed",
    "db:studio": "sst shell -- drizzle-kit studio",
    "deploy": "sst deploy",
    "dev": "sst dev",
    "format:check": "biome format .",
    "format": "biome format --write .",
    "lint:fix": "biome lint --write .",
    "lint": "biome lint .",
    "prepare": "husky",
    "prerelease": "bun run type-check && bun run format && bun run lint:fix && bun run build && bun run test",
    "refresh": "sst refresh",
    "remove": "sst remove",
    "scripts:prod": "sst shell --stage production -- bun run ./tools/scripts/src/index.ts",
    "scripts": "sst shell -- bun run ./tools/scripts/src/index.ts",
    "secret:list": "sst secret list",
    "secret:remove": "sst secret remove",
    "secret:set": "sst secret set",
    "test:e2e": "sst shell -- cypress run",
    "test:e2e:prod": "sst shell --stage production -- cypress run",
    "test": "sst shell -- vitest run",
    "type-check": "turbo run type-check",
    "upgrade": "bun run ./tools/scripts/src/index.ts upgrade && sst upgrade"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/aws-lambda": "^8.10.145",
    "@types/bun": "^1.1.13",
    "@types/node": "^22.9.0",
    "cypress": "^13.15.2",
    "cypress-wait-until": "^3.0.2",
    "drizzle-kit": "^0.28.0",
    "husky": "^9.1.6",
    "rimraf": "^6.0.1",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3",
    "vite-tsconfig-paths": "^5.1.2",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.689.0",
    "@aws-sdk/client-ses": "^3.687.0",
    "@aws-sdk/client-sqs": "^3.689.0",
    "@aws-sdk/s3-request-presigner": "^3.689.0",
    "@libsql/client": "^0.14.0",
    "@upstash/ratelimit": "^2.0.4",
    "@upstash/redis": "^1.34.3",
    "ai": "^3.4.33",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.36.1",
    "drizzle-zod": "^0.5.1",
    "lucia": "^3.2.2",
    "sst": "3.3.19",
    "stripe": "^17.3.1",
    "zod": "^3.23.8"
  },
  "packageManager": "bun@1.1.27",
  "workspaces": ["apps/*", "packages/*", "tools/*"],
  "trustedDependencies": [
    "@biomejs/biome",
    "@parcel/watcher",
    "@sentry/cli",
    "@sentry/profiling-node",
    "core-js",
    "cypress",
    "esbuild",
    "protobufjs",
    "sharp"
  ]
}
