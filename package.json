{
  "name": "theaistudybible",
  "description": "The AI Study Bible",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "clean-install": "rimraf bun.lockb .sst --glob '**/node_modules' && bun install --no-cache && sst install",
    "clean": "turbo run clean",
    "cy:open": "sst shell -- cypress open",
    "db:generate": "sst shell -- drizzle-kit generate",
    "db:migrate": "sst shell -- drizzle-kit migrate",
    "db:seed": "sst shell -- bun run ./tools/scripts/src/index.ts db seed",
    "db:studio": "sst shell -- drizzle-kit studio",
    "deploy": "sst deploy",
    "dev": "sst dev",
    "format:check": "biome format .",
    "format": "biome format --write .",
    "lint:fix": "biome lint --write .",
    "lint": "biome lint .",
    "prepare": "husky",
    "prerelease": "bun run type-check && bun run format && bun run lint:fix",
    "refresh": "sst refresh",
    "remove": "sst remove",
    "scripts:prod": "sst shell --stage production -- bun run ./tools/scripts/src/index.ts",
    "scripts": "sst shell -- bun run ./tools/scripts/src/index.ts",
    "secret:list": "sst secret list",
    "secret:remove": "sst secret remove",
    "secret:set": "sst secret set",
    "test:e2e": "sst shell -- cypress run",
    "test:e2e:prod": "sst shell --stage production -- cypress run",
    "test": "sst shell -- vitest run",
    "type-check": "turbo run type-check",
    "upgrade": "bun run ./tools/scripts/src/index.ts upgrade && sst upgrade"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/aws-lambda": "^8.10.145",
    "@types/bun": "^1.1.12",
    "@types/node": "^22.7.9",
    "cypress": "^13.15.0",
    "cypress-wait-until": "^3.0.2",
    "drizzle-kit": "^0.26.2",
    "husky": "^9.1.6",
    "rimraf": "^6.0.1",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.677.0",
    "@aws-sdk/client-ses": "^3.677.0",
    "@aws-sdk/client-sqs": "^3.677.0",
    "@aws-sdk/s3-request-presigner": "^3.677.0",
    "@libsql/client": "^0.14.0",
    "@upstash/ratelimit": "^2.0.4",
    "@upstash/redis": "^1.34.3",
    "ai": "^3.4.18",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.35.3",
    "drizzle-zod": "^0.5.1",
    "lucia": "^3.2.2",
    "sst": "3.2.48",
    "stripe": "^17.2.1",
    "zod": "^3.23.8"
  },
  "packageManager": "bun@1.1.27",
  "workspaces": ["apps/*", "packages/*", "tools/*"],
  "trustedDependencies": ["@biomejs/biome", "@sentry/cli", "cypress", "esbuild", "sharp"]
}
