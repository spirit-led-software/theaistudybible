{
  "name": "theaistudybible",
  "description": "The AI Study Bible",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.23.0",
    "turbo": "^2.0.7",
    "vitest": "^2.0.3"
  },
  "scripts": {
    "build": "dotenv -e .env -- turbo build",
    "changeset": "changeset",
    "db:generate": "dotenv -e .env -- drizzle-kit generate",
    "db:migrate": "dotenv -e .env -- drizzle-kit migrate",
    "db:seed": "dotenv -e .env -- run ./apps/scripts/src/index.ts db seed",
    "db:studio": "dotenv -e .env -- drizzle-kit studio",
    "dev": "concurrently -n \"docker-compose,turbo,drizzle-studio\" -c \"blue,yellow,red\" \"docker compose up\" \"dotenv -e .env -- turbo dev\" \"pnpm run db:studio\"",
    "format": "turbo format",
    "lint:fix": "turbo lint:fix",
    "lint": "turbo lint",
    "release": "changeset publish",
    "scripts": "dotenv -e .env -- run ./apps/scripts/src/index.ts",
    "start": "dotenv -e .env -- turbo start",
    "type-check": "turbo type-check",
    "version": "changeset version"
  },
  "packageManager": "pnpm@9.5.0"
}