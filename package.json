{
  "name": "theaistudybible",
  "description": "The AI Study Bible",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "clean-install": "rimraf --glob '**/node_modules' bun.lockb && bun pm cache rm && bun install",
    "db:generate": "sst shell -- drizzle-kit generate",
    "db:migrate": "sst shell -- drizzle-kit migrate",
    "db:seed": "sst shell -- bun run ./tools/scripts/src/index.ts db seed",
    "db:studio": "sst shell -- drizzle-kit studio",
    "dev": "sst dev",
    "deploy": "sst deploy",
    "format:check": "biome format .",
    "format": "biome format --write .",
    "lint:fix": "biome lint --write .",
    "lint": "biome lint .",
    "postinstall": "sst install",
    "predeploy": "bun run format && bun run lint:fix",
    "refresh": "sst refresh",
    "remove": "sst remove",
    "scripts": "sst shell -- bun run ./tools/scripts/src/index.ts",
    "scripts:prod": "sst shell --stage production -- bun run ./tools/scripts/src/index.ts",
    "secret:set": "sst secret set",
    "secret:remove": "sst secret remove",
    "secret:list": "sst secret list",
    "type-check": "turbo run type-check",
    "test": "vitest run",
    "upgrade": "bun run scripts upgrade && sst upgrade"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@clerk/types": "^4.20.1",
    "@types/bun": "^1.1.9",
    "@types/node": "^22.5.4",
    "drizzle-kit": "^0.24.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.1.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "8.5.0",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.651.0",
    "@aws-sdk/s3-request-presigner": "^3.651.0",
    "@libsql/client": "^0.11.0",
    "@upstash/ratelimit": "^2.0.2",
    "@upstash/redis": "^1.34.0",
    "ai": "^3.3.35",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "sst": "3.1.8",
    "stripe": "^16.11.0",
    "zod": "^3.23.8"
  },
  "packageManager": "bun@1.1.26",
  "workspaces": ["apps/*", "packages/*", "tools/*"],
  "overrides": {
    "nitropack": "npm:nitropack-nightly@latest"
  },
  "trustedDependencies": ["@biomejs/biome", "@clerk/shared", "esbuild", "sharp"]
}
