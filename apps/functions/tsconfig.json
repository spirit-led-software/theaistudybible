{
  "extends": "@theaistudybible/tsconfig",
  "compilerOptions": {
    "paths": {
      "@theaistudybible/core": ["../../packages/core/src"],
      "@theaistudybible/core/*": ["../../packages/core/src/*"],
      "@theaistudybible/langchain": ["../../packages/langchain/src"],
      "@theaistudybible/langchain/*": ["../../packages/langchain/src/*"],
      "@theaistudybible/functions": ["./src"],
      "@theaistudybible/functions/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "../../packages/core/globals.d.ts",
    "../../packages/server/src/lib/chat.ts"
  ],
  "exclude": ["node_modules"]
}
