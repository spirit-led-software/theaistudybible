{
  "extends": "@theaistudybible/tsconfig",
  "compilerOptions": {
    "verbatimModuleSyntax": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "types": ["vinxi/types/client", "vite-plugin-pwa/solid"],
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@theaistudybible/core": ["../../packages/core/src"],
      "@theaistudybible/core/*": ["../../packages/core/src/*"],
      "@theaistudybible/ai": ["../../packages/ai/src"],
      "@theaistudybible/ai/*": ["../../packages/ai/src/*"],
      "@theaistudybible/tasks": ["../tasks/src"],
      "@theaistudybible/tasks/*": ["../tasks/src/*"],
      "~/*": ["./src/*"]
    }
  },
  "include": ["src", "app.config.ts", "../../packages/core/globals.d.ts"],
  "exclude": ["node_modules", "dist", ".output", ".vinxi"]
}
