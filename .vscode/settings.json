{
  "search.exclude": {
    "**/.sst": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    // "source.addMissingImports": "always", // useful when doing a big refactor
    "source.organizeImports": "always",
  },
  "cSpell.words": [
    "autocorrect",
    "autofocus",
    "Cupertino",
    "Devo",
    "flushbar",
    "Hnsw",
    "langchain",
    "REVENUECAT",
    "Riverpod",
    "unfocus",
    "upstash"
  ],
  "eslint.workingDirectories": [
    ".",
    "packages/core",
    "packages/server",
    "packages/client",
    "packages/functions",
    "packages/website",
    "packages/auth-ui",
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "svelte"
  ]
}