{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend Dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "pnpm-install"
    },
    {
      "name": "Website Dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev:sst"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/packages/website",
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "pnpm-install"
    },
    {
      "name": "Auth UI Dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev:sst"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/packages/auth-ui",
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "pnpm-install"
    },
  ]
}
