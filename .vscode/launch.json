{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter Dev",
      "type": "dart",
      "request": "launch",
      "program": "${workspaceRoot}/mobile/lib/main.dart",
      "args": ["--dart-define-from-file=.env"],
      "console": "debugConsole",
      "preLaunchTask": "prep-flutter"
    },
    {
      "name": "Flutter Release",
      "type": "dart",
      "request": "launch",
      "program": "${workspaceRoot}/mobile/lib/main.dart",
      "args": ["--dart-define-from-file=.env", "--release"],
      "console": "debugConsole",
      "preLaunchTask": "prep-flutter"
    },
    {
      "name": "Backend Dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/sst",
      "runtimeArgs": ["dev"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "npm-install"
    },
    {
      "name": "Website Dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/packages/website",
      "preLaunchTask": "npm-install"
    }
  ]
}
